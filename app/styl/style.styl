@import 'jeet'
// @import url(http://fonts.googleapis.com/css?family=Lato:400,700italic)

// Typographic settings
typo_breakpoint ?= 800px
typo_headers ?= helvetica
typo_header_color ?= #222
typo_header_weight ?= 600
typo_tagline_color ?= #aaa
typo_body ?= helvetica
typo_body_color ?= #444
typo_mobile ?= major_third
typo_desktop ?= octave
@import 'typographic'

// edit()

// Colorscheme
navette = #004875
darker = #001528
whitish = #f7f7f7
background_color = navette
text_color = navette
link_color = whitish

// html
//   background url('/img/yahts.jpg') no-repeat center center fixed
//   -webkit-background-size cover
//   -moz-background-size cover
//   -o-background-size cover
//   background-size cover


body
  font-size 1em
  font-family 'Lato', sans-serif
  background-color background_color
    a
      color link_color
      text-decoration none
      -webkit-transition all .2s linear
      -moz-transition all .2s linear
      -o-transition all .2s linear
      transition all .2s linear

header
  text-align justify
  letter-spacing 1px
  text-transform uppercase
  height 8em
  padding 2em 10%
  color navette
  a
    color navette
    text-decoration none
  > div,
  > div::before,
  div h1,
  nav
    display inline-block
    vertical-align middle
    text-align left
  > div
    width 50%
    height 100%
    text-align left
    &::before
      content ''
      height 100%
  ul
    list-style-type none
  h1.brand
    font-family Gunship, Impact, 'Helvetica Neue', sans-serif
    letter-spacing 5px
  nav a
    line-height 1.5
    padding 0 0.6em
    font-family 'Lato', Helvetica, sans-serif
    text-decoration none
    white-space nowrap
    &:hover
      color whitish
      background-color navette
  &::after
    content ''
    display inline-block
    width 100%


.page__wrapper
  padding 0 10%


.menu__section
  position relative
  span(1/2)
  img
    display block
    max-width 100%

.product
  position relative
  img
    display block
    max-width 100%
    margin 0 auto
    opacity 0.8
    -o-transition opacity 0.3s
    -webkit-transition opacity 0.3s
    -moz-transition opacity 0.3s
    &:hover
      opacity 1.0
  .description
    background rgba(0,0,0,0.5)
    position absolute
    text-align center
    bottom 0
    left 0
    right 0
    color whitish
    p
      margin-top -1em
      margin-bottom 1em

.landing
  .landing
    position absolute
    text-align center
    bottom 0
    left 0
    right 0
    color whitish
    overflow hidden
    h2
      // font-size 5em
      // text-shadow 1px 1px 0 #000
    p
      background rgba(0,0,0,0.5)
      margin-top -3em
      padding-top 1em
      padding-bottom 1em

.products,
.menu
  cf()

blockquote
  margin 0 0 1.11111rem
  padding 0.5rem 1.11111rem 0 1.05556rem
  border-left 1px solid #ddd
  line-height 1.6

blockquote cite
  display block
  // font-size 0.72222rem
  &::before
    content "\2014 \0020"



.boatline
  font-family "Amatic SC", cursive
  // font-size 3em
  text-align center
  display block
  padding 1em 0 0.5em
  background navette
  color whitish
  margin 0

footer
  color whitish
  background navette
  display block
  min-height 12em
  padding 2em 5% 0
  section
    col(1/3)
    ul
      list-style-type none
  a
    color whitish

.post__article
  span(4/5, 1/5)
  section
    padding-right 5%
  img
    display block
    max-width 100%
    margin 0 auto

.gallery
  img
    display inline-block
    padding-right 1em

.equipment ul,
.specification ol
  span(1/2)


.smallprint
  // font-size 0.8em
  color #666

.scroll-nav
  span(1/5)
  position absolute
  // font-size 1.5em
  .scroll-nav__item
    line-height 1.5
    color navette
    text-decoration none
  .active
    font-weight bold

.scroll-nav__list
  padding 0

.scroll-nav.fixed
  position fixed
  top 2em

.scroll-nav__item::before
  font-family FontAwesome
  font-style normal
  font-weight normal
  speak none
  display block
  position absolute
  pointer-events none
  text-align center
  width 40px

.scroll-nav__item.active::before
  font-weight bold

// Nav links
.scroll-nav__item.gallerie::before,
.scroll-nav__item.gallery::before
  content "\f03e\00a0"

.scroll-nav__item.beskrivelse::before,
.scroll-nav__item.description::before
  content "\f02d\00a0"

.scroll-nav__item.utstyr::before,
.scroll-nav__item.equipment::before
  content "\f0f2\00a0"

.scroll-nav__item.spesifikasjon::before,
.scroll-nav__item.specification::before
  content "\f03a\00a0"

.scroll-nav__item.anmeldelser::before
.scroll-nav__item.reviews::before
  content "\f087\00a0"

article
  padding 0 0 8em
  table
    width 100%

.section__top,
.section__left,
.section__right
  img
    center()

.section
  hr
    margin-bottom 5em

@media screen and (max-width: 60em)
  header
    height auto
    > div,
    > div h1,
    nav
      height auto
      width auto
      display block
      text-align center
    h1
      // font-size 2em
  .landing
  .product
    stack()
    h2
      // font-size 1em
  blockquote
    padding 20px 20px
  footer
    padding 40px 20px
    section
      stack()
  .scroll-nav__item
    // font-size 1.5em
    line-height 1.5em
    margin 0 auto
    overflow hidden
    width 40px
  .scroll-nav__link
    display block
    margin 0 auto
    padding-left 42px
  .equipment ul,
  .specification ol
      stack()
  .equipment
    ul
      margin-left 1em
  .specification
    ol,
    ol:first-child
      margin-left 2em
  .section__top,
  .section__left,
  .section__right
    p
      text-align justify

@media screen and (min-width: 60em)
  .scroll-nav__item
    overflow visible
  .scroll-nav__link
    padding-left 35px
  .scroll-nav__wrapper
    margin 0 0 0 5%
  article
    .description p
      -webkit-column-count: 3;
      -webkit-column-gap: 1%; /* Saf3, Chrome*/
      -moz-column-count: 3;
      -moz-column-gap: 1%; /* FF3.5+ */
      column-count: 3;
      column-gap: 1%; /* Opera 11+*/
  .review
    blockquote
      margin 0 10%
    &::hover
      background #ccc

  .section__top
    margin 5% 25%

  .section__left,
  .section__right
    col(1/2)


@media screen and (min-width: 90em)
  .scroll-nav__wrapper
    margin 0 0 0 25%


@media screen and (min-width: 1600px)
  .products
    .product
      span(1/2)


input[type="text"],
input[type="password"],
input[type="date"],
input[type="datetime"],
input[type="datetime-local"],
input[type="month"],
input[type="week"],
input[type="email"],
input[type="number"],
input[type="search"],
input[type="tel"],
input[type="time"],
input[type="url"],
textarea
  -webkit-appearance none
  background-color #fff
  font-family inherit
  border 1px solid #cccccc
  box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.1)
  color rgba(0, 0, 0, 0.75)
  display block
  // font-size 0.77778rem
  margin 0 0 0.88889rem 0
  padding 0.44444rem
  height 2.05556rem
  width 100%
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box
  transition box-shadow 0.45s border-color 0.45s ease-in-out

textarea
  height 10rem


button,
.button
  border-style solid
  border-width 0px
  cursor pointer
  font-weight normal
  line-height normal
  margin 0 0 1.11111rem
  position relative
  text-decoration none
  text-align center
  -webkit-appearance none
  -webkit-border-radius 0
  display inline-block
  padding-top 0.88889rem
  padding-right 1.77778rem
  padding-bottom 0.94444rem
  padding-left 1.77778rem
  // font-size 0.88889rem
  background-color navette
  border-color darker
  color whitish
  transition background-color 300ms ease-out
  &:hover
    background-color darker

.space-wrapper
  padding 2em 5%

.translate
  color hotpink !important

