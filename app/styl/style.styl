@import 'jeet'

// Colorscheme
navette = #293b47
ocean = #001528
darker = ocean
whitish = #f7f7f7
background_color = navette
text_color = navette
link_color = ocean
link_hover_color = #222

// Typograpic
typo_breakpoint ?= 800px
typo_headers ?= oswald
typo_header_color ?= navette
typo_header_weight ?= 600
typo_tagline_color ?= #aaa
typo_body ?= lato
typo_body_color ?= text_color
typo_mobile ?= minor_sixth
typo_desktop ?= octave
@import 'typographic'

// edit()

h1
  font-weight 700
  text-transform uppercase

.topbar
  display block
  min-height ms(5)
  background #293b47


header
  background #f7f7f7
// .cta
//   background #aaa
.main
  background #f7f7f7

footer
  background #293b47


html
  -webkit-text-size-adjust 100%
  -ms-text-size-adjust 100%
  font-size 100%

body
  font-size 16px
  background-color whitish
  a
    color link_color
    text-decoration none
    -webkit-transition all .2s linear
    -moz-transition all .2s linear
    -o-transition all .2s linear
    transition all .2s linear
    &:hover
      color link_hover_color

header
  text-align justify
  letter-spacing 1px
  text-transform uppercase
  height 8em
  padding ms(10) 10% ms(10)
  h1
    font-size ms(20)
  a
    text-decoration none
  > div,
  > div::before,
  div h1,
  nav
    display inline-block
    vertical-align middle
    text-align left
  > div
    width 50%
    height 100%
    text-align left
    &::before
      content ''
      height 100%
  ul
    list-style-type none
  .brand
    font-family Gunship, Impact, 'Helvetica Neue', sans-serif
    letter-spacing 5px
  nav a
    line-height 1.5
    padding ms(3) ms(5)
    margin-top ms(15)
    text-decoration none
    white-space nowrap
    &:hover
      color whitish
      background-color navette
  .active
    color whitish
    background-color navette
  &::after
    content ''
    display inline-block
    width 100%

.menu
  text-align center

.menu__title
  display block
  text-transform uppercase

.menu__subtitle
  display block
  font-weight 700
  font-style italic
  margin-bottom 5em

.menu__section,
.product
  position relative
  box-sizing border-box
  -webkit-box-shadow 0px 6px 5px rgba(0, 0, 0, 0.2)
  -moz-box-shadow 0px 6px 5px rgba(0, 0, 0, 0.2)
  box-shadow 0px 6px 5px rgba(0, 0, 0, 0.2)
  background-size cover
  background-position center top
  margin-bottom ms(40)
  col(1/2)
  img
    display block
    max-width 100%
    margin 0 auto
    opacity 1.0
    -o-transition opacity 0.3s
    -webkit-transition opacity 0.3s
    -moz-transition opacity 0.3s
  &:hover
    img
      opacity 1.0
  .product__description,
  .menu__section__description
    text-align center
    -webkit-box-shadow 0px 3px 25px rgba(255, 255, 255, 0.9)
    -moz-box-shadow 0px 3px 25px rgba(255, 255, 255, 0.9)
    box-shadow 0px 3px 25px rgba(255, 255, 255, 0.9)
    border-top 1px solid #fff
    background-color #ebebeb
    width 100%
    z-index 2
    .inner
      min-height ms(60)
      padding ms(20) ms(25)
  a
    text-decoration none
    color link_color

.main
  display block
  padding ms(20) 10% ms(40)

.cta
  padding ms(40) 10%

.scroll-nav__section
  padding-top ms(20)
  h2
    padding ms(20) 0 ms(10)

.cta__description
  span(2/6)
.cta__form
  span(4/6)

.cta__note
  span(1)

.products,
.menu,
.main,
.cta,
.scroll-nav__section,
.contact__form
  cf()

blockquote
  margin 0 0 1.11111rem
  padding 0.5rem 1.11111rem 0 1.05556rem
  border-left 1px solid #ddd
  line-height 1.6

blockquote cite
  display block
  // font-size 0.72222rem
  &::before
    content "\2014 \0020"

.boatline
  font-family "Amatic SC", cursive
  // font-size 3em
  text-align center
  display block
  padding 1em 0 0.5em
  background navette
  color whitish
  margin 0

footer
  color whitish
  display block
  min-height 12em
  height 100%
  cf()
  section
    col(1/3)
    ul
      list-style-type none
  a
    color whitish
    text-decoration none
  li.list__title
    font-weight 700
    font-style italic
  li.fa
    display inline-block
    // margin-right 20px
    font-size 1.5em


.post__article
  section
    padding-right 5%
  img
    display block
    max-width 100%
    margin 0 auto


.gallery
  img
    display inline-block

.half,
.equipment ul,
.specification ol
  span(1/2)

.specification
  ol
    margin-top ms(20)
  hr
    clear both


.contact
  .contact__list
    span(1)
    margin-bottom ms(40)
  li
    list-style-type none
  .contact__form
    padding-top ms(10)
    .subtitle
      display block
      margin-bottom ms(10)


.smallprint
  font-size ms(8)
  color #666

.scroll-nav
  position absolute
  .scroll-nav__item
    line-height 1.5
    color navette
  .active
    font-weight bold
  .scroll-nav__link
    color navette
    text-decoration none

.scroll-nav__list
  padding 0

.scroll-nav.fixed
  position fixed
  top 2em

.scroll-nav__item::before
  font-family FontAwesome
  font-style normal
  font-weight normal
  speak none
  display block
  position absolute
  pointer-events none
  text-align center
  width 40px

.scroll-nav__item.active::before
  font-weight bold

// Nav links
.scroll-nav__item.gallerie::before,
.scroll-nav__item.gallery::before
  content "\f03e\00a0"

.scroll-nav__item.beskrivelse::before,
.scroll-nav__item.description::before
  content "\f02d\00a0"

.scroll-nav__item.utstyr::before,
.scroll-nav__item.equipment::before
  content "\f0f2\00a0"

.scroll-nav__item.spesifikasjon::before,
.scroll-nav__item.specification::before
  content "\f03a\00a0"

.scroll-nav__item.anmeldelser::before
.scroll-nav__item.reviews::before
  content "\f087\00a0"

article
  table
    width 100%

tbody
  tr:nth-child(odd)
    background-color #ebebeb


@media screen and (max-width: 64em)
  .main
    padding 0 5% ms(20)
  header
    height auto
    > div,
    > div h1,
    nav
      height auto
      width auto
      display block
      text-align center
  .product,
  .menu__section,
  .cta__description,
  .cta__form,
  .contact__entry
    stack()
  .contact__entry
    padding-top ms(20)
  blockquote
    padding 20px 20px
  footer
    padding ms(20) 5%
    section
      stack()
      margin-top ms(20)
  .scroll-nav
    span(1/5)
    margin-left -10px
  .post__article
    span(4/5, 1/5)
  .scroll-nav__item
    font-size ms(25)
    line-height 1.5em
    margin 0 auto
    overflow hidden
    width 40px
  .scroll-nav__link
    display block
    margin 0 auto
    padding-left 45px
  .equipment ul,
  .specification ol
      stack()
  .equipment
    ul
      margin-left 1em
  .specification
    ol,
    ol:first-child
      margin-left 2em
  .section__top,
  .section__left,
  .section__right
    p
      text-align justify


@media screen and (min-width: 64em)
  .main
    padding ms(20) 10% ms(40)
  footer
    padding ms(50) 5% ms(20)
  .scroll-nav
    span(1/5)
  .post__article
    span(4/5, 1/5)
  .scroll-nav__item
    font-size ms(12)
  .scroll-nav__link
    padding-left 35px
  .scroll-nav__wrapper
    margin 0 0 0 5%
  article
    .columns
      -webkit-column-count: 3;
      -webkit-column-gap: 1%; /* Saf3, Chrome*/
      -moz-column-count: 3;
      -moz-column-gap: 1%; /* FF3.5+ */
      column-count: 3;
      column-gap: 1%; /* Opera 11+*/
  .review
    blockquote
      margin 0 10%
  .contact__entry
    span(1/3)


@media screen and (min-width: 120em)
  .scroll-nav__item
    font-size ms(14)

@media screen and (min-width: 125em)
  .main
    min-height 50em

input[type="text"],
input[type="password"],
input[type="date"],
input[type="datetime"],
input[type="datetime-local"],
input[type="month"],
input[type="week"],
input[type="email"],
input[type="number"],
input[type="search"],
input[type="tel"],
input[type="time"],
input[type="url"],
textarea
  -webkit-appearance none
  background-color #fff
  font-family inherit
  border 1px solid #cccccc
  box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.1)
  color rgba(0, 0, 0, 0.75)
  display block
  margin 0 0 0.88889rem 0
  padding 0.44444rem
  height 2.05556rem
  width 100%
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box
  transition box-shadow 0.45s border-color 0.45s ease-in-out

textarea
  height 10rem

button,
.button
  border-style solid
  border-width 0px
  cursor pointer
  font-weight normal
  line-height normal
  margin 0 0 1.11111rem
  position relative
  text-decoration none
  text-align center
  -webkit-appearance none
  -webkit-border-radius 0
  display inline-block
  padding-top 0.88889rem
  padding-right 1.77778rem
  padding-bottom 0.94444rem
  padding-left 1.77778rem
  font-size 0.88889rem
  background-color navette
  border-color darker
  color whitish
  transition background-color 300ms ease-out
  &:hover
    background-color darker

.translate
  color maroon !important

