    list-style-type none
  .brand
    font-family Gunship, Impact, 'Helvetica Neue', sans-serif
    letter-spacing 5px
  nav a
    line-height 1.5
    padding ms(3) ms(5)
    margin-top ms(15)
    text-decoration none
    white-space nowrap
    &:hover
