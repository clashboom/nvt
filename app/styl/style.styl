  .timeline__wrapper
    margin ms(20) 0


@media screen and (min-width: 64em)
  .main
    padding ms(20) 10% ms(40)
  .cta
    margin-top ms(60)
  footer
    padding ms(50) 5% ms(20)
  article
    .columns
      -webkit-column-count: 3;
      -webkit-column-gap: 1%; /* Saf3, Chrome*/
      -moz-column-count: 3;
      -moz-column-gap: 1%; /* FF3.5+ */
      column-count: 3;
      column-gap: 1%; /* Opera 11+*/
  article > div
    margin-bottom ms(20)
  .review
    blockquote
      margin 0 10%
  .contact__entry
    col(1/3)
  .gallery__img
    margin-right ms(10)
  .menu__section,
  .product
    margin-bottom ms(30)
  .gallery
    center()
  .product__description,
  .menu__section__description
    .inner
      min-height ms(30)
      padding ms(20) ms(25)
  .cd-top
    height 60px
    width 60px
    right 30px
    bottom 30px
  .timeline
    margin-top ms(30)
    margin-bottom ms(30)
    padding ms(30) ms(60)
    &::before
      left 50%
      margin-left -2px
  .timeline__wrapper
    margin ms(40) 0
    &:first-child
      margin-top 0
    &:last-child
      margin-bottom 0
  .timeline__img
    width 60px
    height 60px
    left 50%
    margin-left -30px
    // Force HW acc
    -webkit-transform: translateZ(0)
    -webkit-backface-visibility hidden
  .timeline
    .timeline__content
      margin-left 0
      padding ms(16)
      width 45%
      &::before
        top ms(15)
        left 100%
        border-color transparent
        border-left-color timeline_bubble
      .timeline__link
        float left
      .timeline__date
        position absolute
        width 100%
        left 122%
        top ms(6)
        font-size ms(10)
        font-size 1rem
  .timeline__wrapper
    &:nth-child(even)
      .timeline__content
        float right
        &::before
          top ms(15)
          left auto
          right 100%
          border-color transparent
          border-right-color timeline_bubble
        .timeline__link
          float right
        .timeline__date
          left auto
          right 122%
          text-align right


.cssanimations
  .timeline__img
    // Force HW acc
    -webkit-transform: translateZ(0)
    -webkit-backface-visibility hidden
  .timeline__img--hidden
    visibility hidden
  .timeline__img.bounce-in
      -webkit-animation cd-bounce-1 0.6s
      -moz-animation cd-bounce-1 0.6s
      animation cd-bounce-1 0.6s
      visibility visible
  .timeline__wrapper:nth-child(even)
    .timeline__content.bounce-in
      -webkit-animation cd-bounce-2-inverse 0.6s
      -moz-animation cd-bounce-2-inverse 0.6s
      animation cd-bounce-2 inverse 0.6s
      visibility visible


