  a
    color footer_link_color
    text-decoration none
    &:hover
      color footer_link_hover_color
  li.list__title
    font-weight 700
    font-style italic
  li.fa
    display inline-block
    // margin-right 20px
    font-size 1.5em

article
  img
    display block
    max-width 100%
    margin 0 auto

.gallery
  .gallery__img
    width 100px
    height 100px
  img
    max-width 100%
    max-height 100%
  .th
    line-height 0
    display inline-block
    border solid 4px #fff
    max-width 100%
    box-shadow 0 0 0 1px rgba(0, 0, 0, 0.2)
    transition all 200ms ease-out
    &:hover,
    &:focus
