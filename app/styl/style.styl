header
  background-color whitish
  text-align justify
  letter-spacing 1px
  text-transform uppercase
  height 8em
  padding 2em 5%
  color navette
  a
    color navette
    text-decoration none
  > div,
  > div::before,
  div h1,
  nav
    display inline-block
    vertical-align middle
    text-align left
  > div
    width 50%
    height 100%
    text-align left
    &::before
      content ''
      height 100%
  ul
    list-style-type none
  h1.brand
    font-family Gunship, Impact, 'Helvetica Neue', sans-serif
    letter-spacing 5px
    font-size 2em
  nav a
    color navette
    line-height 1.5
    padding 0 0.6em
    white-space nowrap
    font-family 'Lato', sans-serif
    text-decoration none
    &:last-child
      padding-right 0
    &:hover
      color whitish
      background-color navette
  &::after
    content ''
    display inline-block
    width 100%


body
    font-family 'Lato', sans-serif
    background whitish

.half
  position relative
  span(1/2)
  img
    display block
    max-width 100%
    margin 0 auto

.product
  position relative
  img
    display block
    max-width 100%
    margin 0 auto
    opacity 0.8
    -o-transition opacity 0.3s
    -webkit-transition opacity 0.3s
    -moz-transition opacity 0.3s
    &:hover
      opacity 1.0
  .description
    background rgba(0,0,0,0.5)
    position absolute
    text-align center
    bottom 0
    left 0
    right 0
    color whitish
    p
      margin-top -1em
      margin-bottom 1em

.landing
  .description
    position absolute
    text-align center
    bottom 0
    left 0
    right 0
    color whitish
    overflow hidden
    h2
      font-size 5em
      // text-shadow 1px 1px 0 #000
    p
      background rgba(0,0,0,0.5)
      margin-top -3em
      padding-top 1em
      padding-bottom 1em

.products,
.wrapper
  cf()

blockquote
  font-family "Amatic SC", cursive
  font-size 3em
  text-align center
  display block
  padding 2em 0
  background navette
  color whitish
  margin 0
  ::before
    content "„"
    left -10px
    top -105px
  ::after
    bottom -90px
    content "“"
    right -10px

footer
  color whitish
  background navette
  display block
  min-height 12em
  padding 2em 5% 0
  section
    col(1/3)
    ul
      list-style-type none

.post__article
  span(4/5, 1/5)

.scroll-nav
  position absolute
  a
    color navette
    text-decoration none
  .active
    font-weight bold

.scroll-nav.fixed
  position fixed




@media screen and (max-width: 720px)
  header
    height auto
    > div,
    > div h1,
    nav
      height auto
      width auto
      display block
      text-align center
    h1
      font-size 2em
  .half,
  .product
    stack()
    h2
      font-size 1em
  blockquote
    padding 20px 20px
  footer
    padding 40px 20px 
    section
      stack()

