header
  text-align justify
  letter-spacing 1px
  text-transform uppercase
  height 8em
  padding ms(10) 10% ms(10)
  h1
    font-size ms(20)
  a
    text-decoration none
  > div,
  > div::before,
  div h1,
  nav
    display inline-block
    vertical-align middle
    text-align left
  > div
    width 50%
    height 100%
    text-align left
    &::before
