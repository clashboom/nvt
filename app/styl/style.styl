.about__section
  margin-bottom ms(30)
  img
    max-width 100%

.half,
.equipment ul,
.specification ol
  span(1/2)

.half-col
  col(1/2)

.specification
  img
    margin-bottom ms(20)
  hr
    clear both

.contact
  .contact__list
    span(1)
    margin-bottom ms(40)
  li
    list-style-type none
  .contact__form
    padding-top ms(10)
    .subtitle
      display block
      margin-bottom ms(10)
  ul,
  ol
    padding-left 0

.smallprint
  font-size ms(8)
  color #666
  display block

article
  table
    width 100%

tbody
  tr:nth-child(odd)
    background-color zebra_stripe_color

