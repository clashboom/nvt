@import 'jeet'
// @import 'typographic'

edit()

header
  text-align justify
  letter-spacing 1px
  height 8em
  padding 2em 5%
  h1,
  nav,
  nav li
    display linline-block
  ul
    list-style-type none
  &::after
    content ''
    display linline-block
    width 100%


@font-face {
  font-family: 'Gunship';
    src:  url('/fonts/Gunship.ttf.woff') format('woff'),
    url('/fonts/Gunship.ttf.svg#Gunship') format('svg'),
    url('/fonts/Gunship.ttf.eot'),
    url('/fonts/Gunship.eot?#iefix') format('embedded-opentype'); 
    font-weight: normal;
    font-style: normal;
}

// Colorscheme
navette = #0D4171

h1.brand
  font-family Gunship, Impact, 'Helvetica Neue', sans-serif
  color navette
  text-transform uppercase
  letter-spacing 5px
