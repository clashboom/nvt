@import 'jeet'

// Colorscheme
navette = #293b47
ocean = #001528
darker = ocean
whitish = #f7f7f7
background_color = navette
text_color = navette
link_color = ocean
link_hover_color = #222

// Typograpic
typo_breakpoint ?= 800px
typo_headers ?= oswald
typo_header_color ?= navette
typo_header_weight ?= 600
typo_tagline_color ?= #aaa
typo_body ?= lato
typo_body_color ?= text_color
typo_mobile ?= minor_sixth
typo_desktop ?= octave
@import 'typographic'

// edit()

h1
  font-weight 700
  text-transform uppercase

.topbar
  display block
  min-height ms(5)
  background #293b47


header
  background #f7f7f7
// .cta
//   background #aaa
.main
  background #f7f7f7

footer
  background #293b47


html
  -webkit-text-size-adjust 100%
  -ms-text-size-adjust 100%
  font-size 100%

body
  font-size 16px
  background-color whitish
  a
    color link_color
    text-decoration none
    -webkit-transition all .2s linear
    -moz-transition all .2s linear
    -o-transition all .2s linear
    transition all .2s linear
    &:hover
      color link_hover_color

header
  text-align justify
  letter-spacing 1px
  text-transform uppercase
  height 8em
  padding ms(10) 10% ms(10)
  h1
    font-size ms(20)
  a
    text-decoration none
  > div,
  > div::before,
  div h1,
  nav
    display inline-block
    vertical-align middle
    text-align left
  > div
    width 50%
    height 100%
    text-align left
    &::before
      content ''
      height 100%
  ul
    list-style-type none
  .brand
    font-family Gunship, Impact, 'Helvetica Neue', sans-serif
    letter-spacing 5px
  nav a
    line-height 1.5
    padding ms(3) ms(5)
    margin-top ms(15)
    text-decoration none
    white-space nowrap
    &:hover
      color whitish
      background-color navette
  .active
    color whitish
    background-color navette
  &::after
    content ''
    display inline-block
    width 100%

.menu
  text-align center

.menu__title
  display block
  text-transform uppercase

.menu__subtitle
  display block
  font-weight 700
  font-style italic
  margin-bottom 5em

.about__img
    -webkit-box-shadow 0px 6px 5px rgba(0, 0, 0, 0.1)
    -moz-box-shadow 0px 6px 5px rgba(0, 0, 0, 0.1)
    box-shadow 0px 6px 5px rgba(0, 0, 0, 0.1)


.menu__section,
.product
  position relative
  box-sizing border-box
  -webkit-box-shadow 0px 6px 5px rgba(0, 0, 0, 0.2)
  -moz-box-shadow 0px 6px 5px rgba(0, 0, 0, 0.2)
  box-shadow 0px 6px 5px rgba(0, 0, 0, 0.2)
  background-size cover
  background-position center top
  margin-bottom ms(40)
  col(12/25)
  img
    display block
    max-width 100%
  .product__description,
  .menu__section__description
    text-align center
    -webkit-box-shadow 0px 3px 25px rgba(255, 255, 255, 0.9)
    -moz-box-shadow 0px 3px 25px rgba(255, 255, 255, 0.9)
    box-shadow 0px 3px 25px rgba(255, 255, 255, 0.9)
    border-top 1px solid #fff
    background-color #ebebeb
    width 100%
    z-index 2
    .inner
      min-height ms(60)
      padding ms(20) ms(25)
  a
    text-decoration none
    color link_color

.main
  display block
  padding ms(20) 10% ms(40)

.about,
article
  p
    text-align justify

.cta__description
  span(2/6)
.cta__form
  span(4/6)
.cta__note
  span(1)

.products,
.menu,
.main,
.cta,
.contact__form,
article > div,
.about > div
  cf()

blockquote
  margin 0 0 1.11111rem
  padding 0.5rem 1.11111rem 0 1.05556rem
  border-left 1px solid #ddd
  line-height 1.6

blockquote cite
  display block
  // font-size 0.72222rem
  &::before
    content "\2014 \0020"

.boatline
  font-family "Amatic SC", cursive
  // font-size 3em
  text-align center
  display block
  padding 1em 0 0.5em
  background navette
  color whitish
  margin 0

footer
  color whitish
  display block
  min-height 12em
  height 100%
  cf()
  section
    col(1/3)
    ul
      list-style-type none
  a
    color whitish
    text-decoration none
    &:hover
      color ocean
  li.list__title
    font-weight 700
    font-style italic
  li.fa
    display inline-block
    // margin-right 20px
    font-size 1.5em

article
  img
    display block
    max-width 100%
    margin 0 auto

.gallery
  .gallery__img
    display inline-block
    width 100px
    height 100px
  img
    max-width 100%
    max-height 100%
  .th
    line-height 0
    display inline-block
    border solid 4px #fff
    max-width 100%
    box-shadow 0 0 0 1px rgba(0, 0, 0, 0.2)
    transition all 200ms ease-out
    &:hover,
    &:focus
      box-shadow: 0 0 6px 1px rgba(0, 140, 186, 0.5);


.about__section
  margin-bottom ms(30)
  .about__img
    max-height ms(100)
    margin-bottom ms(10)
    overflow hidden
  img
    max-width 100%

.half,
.equipment ul,
.specification ol
  col(1/2)

.specification
  img
    margin-bottom ms(20)
  hr
    clear both

.contact
  .contact__list
    span(1)
    margin-bottom ms(40)
  li
    list-style-type none
  .contact__form
    padding-top ms(10)
    .subtitle
      display block
      margin-bottom ms(10)

.smallprint
  font-size ms(8)
  color #666

article
  table
    width 100%

tbody
  tr:nth-child(odd)
    background-color #ebebeb

@media screen and (max-width: 64em)
  .main
    padding 0 5% ms(20)
  header
    height auto
    > div,
    > div h1,
    nav
      height auto
      width auto
      display block
      text-align center
  .half,
  .product,
  .menu__section,
  .cta__description,
  .cta__form,
  .contact__entry
    stack()
  .contact__entry
    padding-top ms(20)
  blockquote
    padding 20px 20px
  footer
    padding ms(20) 5%
    section
      stack()
      margin-top ms(20)
  .equipment ul
    stack()
  .equipment
    ul
      margin-left 1em
  .specification
    ol,
    ol:first-child
      margin-left 1em
  .gallery__img
    margin-right ms(3)
  article > div
    margin-bottom ms(20)
  .cta 
    margin-top ms(20)


@media screen and (min-width: 64em)
  .main
    padding ms(20) 10% ms(40)
  .cta 
    margin-top ms(60)
  footer
    padding ms(50) 5% ms(20)
  article
    .columns
      -webkit-column-count: 3;
      -webkit-column-gap: 1%; /* Saf3, Chrome*/
      -moz-column-count: 3;
      -moz-column-gap: 1%; /* FF3.5+ */
      column-count: 3;
      column-gap: 1%; /* Opera 11+*/
  article > div
    margin-bottom ms(40)
  .review
    blockquote
      margin 0 10%
  .contact__entry
    span(1/3)
  .gallery__img
    margin-right ms(15)


@media screen and (min-width: 125em)
  .main
    min-height 50em

input[type="text"],
input[type="password"],
input[type="date"],
input[type="datetime"],
input[type="datetime-local"],
input[type="month"],
input[type="week"],
input[type="email"],
input[type="number"],
input[type="search"],
input[type="tel"],
input[type="time"],
input[type="url"],
textarea
  -webkit-appearance none
  background-color #fff
  font-family inherit
  border 1px solid #cccccc
  box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.1)
  color rgba(0, 0, 0, 0.75)
  display block
  margin 0 0 0.88889rem 0
  padding 0.44444rem
  height 2.05556rem
  width 100%
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box
  transition box-shadow 0.45s border-color 0.45s ease-in-out

textarea
  height 10rem

button,
.button
  border-style solid
  border-width 0px
  cursor pointer
  font-weight normal
  line-height normal
  margin 0 0 1.11111rem
  position relative
  text-decoration none
  text-align center
  -webkit-appearance none
  -webkit-border-radius 0
  display inline-block
  padding-top 0.88889rem
  padding-right 1.77778rem
  padding-bottom 0.94444rem
  padding-left 1.77778rem
  font-size 0.88889rem
  background-color navette
  border-color darker
  color whitish
  transition background-color 300ms ease-out
  &:hover
    background-color darker

.translate
  color maroon !important

